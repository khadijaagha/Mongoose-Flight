<%- include('../partials/header')%>

    <ul>
        <li>Airline: <%= flight.airline %>
        </li>
        <li>Airport: <%= flight.airport %>
        </li>
        <li>Flight No.: <%= flight.flightNo %>
        </li>
        <li>Departure: <%= flight.depart %>
        </li>

    </ul>

    <div>
        <h3>Edit Flight</h3>
    </div>



    <form id="add-destination" method="POST" action="/flights/<%=flight._id%>/destinations">

        <label>Destination:
            <input type="text" name="destination">
        </label><br>
        <label>Arrival:
            <input type="date" name="arrival">
        </label><br>
        <label>Airport: </label>

        <select name="airport">

            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX" selected>LAX</option>
            <option value="SAN">SAN</option>

        </select>

        <input type="submit" Add destination="airport">

    </form>

    <% if (flight.destinations.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Destination</th>
                    <th>Airport</th>
                    <th>Arrival</th>
                    <th></th>
                </tr>
            </thead>

                   <tbody>
          <% flight.destinations.forEach(function(destination) { %>
            
              <tr>
                  
                  <td><%= destination.airport %></td>
                  <td><%= destination.arrival %></td>
              </tr>
              <% }); %>
        </tbody>      
        </table>
        <% } else { %>
            <h5>No Destinations Yet</h5>


            <% } %> <%- include('../partials/footer')%>